<?xml version='1.0' encoding='utf-8'?>
<widget
  xmlns       = "http://www.w3.org/ns/widgets"
  xmlns:gap   = "http://phonegap.com/ns/1.0"
  id          = "com.shop-mobilizer.miss-ideal.com.ua"
  version     = "19.11.05"
  versionCode = "191105"
>
  <name>Интернет магазин "Мисс Идеал"</name>
  <author
    href="http://shop-mobilizer.com"
    email="info@shop-mobilizer.com">Shop-Mobilizer
  </author>
  <description>miss-ideal.com.ua</description>
  <preference name="phonegap-version" value="cli-9.0.0"/>
  <preference name="fullscreen" value="true"/>
  <preference name="permissions" value="none"/>

  <platform name="android">
    <icon   src="res/icon/android/icon.png"/>
    <splash src="res/splash/android/Logo.png"/>
  </platform>

  <platform name="ios">
    <preference name="target-device" value="universal"/>
    <preference name="detect-data-types" value="false"/>
    <preference name="exit-on-suspend" value="false"/>
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <icon   src="res/icon/ios/icon.png"/>
    <icon   src="res/icon/ios/icon-60@3x.png"                width="180"  height="180"/>
    <icon   src="res/icon/ios/icon-60.png"                   width="60"   height="60"/>
    <icon   src="res/icon/ios/icon-60@2x.png"                width="120"  height="120"/>
    <icon   src="res/icon/ios/icon-76.png"                   width="76"   height="76"/>
    <icon   src="res/icon/ios/icon-76@2x.png"                width="152"  height="152"/>
    <icon   src="res/icon/ios/icon-small.png"                width="29"   height="29"/>
    <icon   src="res/icon/ios/icon-small@2x.png"             width="58"   height="58"/>
    <icon   src="res/icon/ios/icon-40.png"                   width="40"   height="40"/>
    <icon   src="res/icon/ios/icon-40@2x.png"                width="80"   height="80"/>
    <icon   src="res/icon/ios/icon-.png"                     width="57"   height="57"/>
    <icon   src="res/icon/ios/icon@2x.png"                   width="114"  height="114"/>
    <icon   src="res/icon/ios/icon-72.png"                   width="72"   height="72"/>
    <icon   src="res/icon/ios/icon-72@2x.png"                width="144"  height="144"/>
    <icon   src="res/icon/ios/icon-50.png"                   width="50"   height="50"/>
    <icon   src="res/icon/ios/icon-50@2x.png"                width="100"  height="100"/>

    <splash src="res/splash/ios/Default.png"                   width="320"  height="480"/>
    <splash src="res/splash/ios/Default@2x.png"                width="640"  height="960"/>
    <splash src="res/splash/ios/Default-568h@2x.png"           width="640"  height="1136"/>
    <splash src="res/splash/ios/Default-667h@2x.png"           width="750"  height="1334"/>
    <splash src="res/splash/ios/Default-Portrait-736h@3x.png"  width="1242" height="2208"/>
    <splash src="res/splash/ios/Default-Landscape-736h@3x.png" width="2208" height="1242"/>
    <splash src="res/splash/ios/Default-Portrait.png"          width="768"  height="1024"/>
    <splash src="res/splash/ios/Default-Landscape.png"         width="1024" height="768"/>
    <splash src="res/splash/ios/Default-Portrait@2x.png"       width="1536" height="2048"/>
    <splash src="res/splash/ios/Default-Landscape@2x.png"      width="2048" height="1536"/>
  </platform>

  <platform name="winphone">
    <splash src="logo768x1024.jpg"/>
  </platform>
  <preference name="windows-appx-target" value="8.1-phone"/>
  <preference name="windows-arch" value="anycpu"/>
  <preference name="windows-identity-name" value=""/>

  <!--plugin name="cordova-plugin-file" spec="4.3.0"/-->
  <!--plugin name="cordova-plugin-x-socialsharing" spec="5.1.3"/-->
  <plugin name="cordova-plugin-globalization" spec="1.11.0"/>
  <plugin name="cordova-plugin-inappbrowser" spec="3.1.0"/>
  <plugin name="cordova-plugin-whitelist" spec="1.3.4"/>
  <plugin name="cordova-plugin-statusbar" spec="2.4.3"/>
  <plugin name="cordova-plugin-exitapp" spec="1.0.0"/>
  <plugin name="cordova-plugin-device" spec="2.0.3"/>
  <!--plugin name="phonegap-plugin-push" spec="2.3.0" platform="android,ios">
    <param name="SENDER_ID" value="868580530265"/>
  </plugin-->

  <allow-navigation href="*"/>
  <allow-intent href="*"/>
  <access origin="*"/>

  <config-file platform="ios" parent="UIStatusBarHidden">
    <true/>
  </config-file>
  <config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
    <false/>
  </config-file>

  <config-file platform="winphone" parent="/Deployment" mode="replace">
    <Languages xmlns="">
      <Language code="ru-RU"/>

    </Languages>
    <DefaultLanguage xmlns="" code="ru-RU"/>
  </config-file>
</widget>